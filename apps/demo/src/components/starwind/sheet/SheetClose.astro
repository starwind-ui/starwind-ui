---
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"button"> & {
  /**
   * When true, the component will render its child element with a simple wrapper instead of a button component
   */
  asChild?: boolean;
};

const { class: className, asChild = false, ...rest } = Astro.props;

// Get the first child element if asChild is true
let hasChildren = false;
if (Astro.slots.has("default")) {
  hasChildren = true;
}
---

{
  asChild && hasChildren ? (
    <div
      class:list={["starwind-sheet-close", className]}
      data-slot="sheet-close"
      data-as-child
    >
      <slot />
    </div>
  ) : (
    <button
      type="button"
      class:list={["starwind-sheet-close", className]}
      data-slot="sheet-close"
      {...rest}
    >
      <slot />
    </button>
  )
}

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const closeButtons = document.querySelectorAll('.starwind-sheet-close');
    
    closeButtons.forEach(button => {
      button.addEventListener('click', () => {
        const sheet = button.closest('.starwind-sheet');
        if (sheet) {
          sheet.dispatchEvent(new CustomEvent('sheet:close'));
        }
      });
    });
  });

  // Handle view transitions
  document.addEventListener('astro:after-swap', () => {
    const closeButtons = document.querySelectorAll('.starwind-sheet-close');
    
    closeButtons.forEach(button => {
      button.addEventListener('click', () => {
        const sheet = button.closest('.starwind-sheet');
        if (sheet) {
          sheet.dispatchEvent(new CustomEvent('sheet:close'));
        }
      });
    });
  });
</script>
