---
import TabsForm from "@/components/forms/TabsForm.astro";
import { Tabs, TabsContent, TabsList, TabsTrigger } from "@/components/starwind/tabs";
---

<section class="mx-auto mt-6 flex w-full max-w-lg flex-col gap-6">
  <h2 class="mb-4 text-2xl font-bold">Tabs</h2>
  <TabsForm />

  <Tabs defaultValue="npm" syncKey="package-manager" class="max-w-[400px]">
    <TabsList>
      <TabsTrigger value="npm">npm</TabsTrigger>
      <TabsTrigger value="pnpm">pnpm</TabsTrigger>
      <TabsTrigger value="bun">bun</TabsTrigger>
      <TabsTrigger value="yarn">yarn</TabsTrigger>
    </TabsList>
    <TabsContent value="npm">$ npx starwind@latest init</TabsContent>
    <TabsContent value="pnpm">$ pnpm dlx starwind@latest init</TabsContent>
    <TabsContent value="bun">$ bunx starwind@latest init</TabsContent>
    <TabsContent value="yarn">$ yarn dlx starwind@latest init</TabsContent>
  </Tabs>

  <Tabs defaultValue="npm" syncKey="package-manager" class="max-w-[400px]">
    <TabsList>
      <TabsTrigger value="npm">npm</TabsTrigger>
      <TabsTrigger value="pnpm">pnpm</TabsTrigger>
      <TabsTrigger value="bun">bun</TabsTrigger>
      <TabsTrigger value="yarn">yarn</TabsTrigger>
    </TabsList>
    <TabsContent value="npm">$ npm run dev</TabsContent>
    <TabsContent value="pnpm">$ pnpm dev</TabsContent>
    <TabsContent value="bun">$ bun dev</TabsContent>
    <TabsContent value="yarn">$ yarn dev</TabsContent>
  </Tabs>

  <section class="mt-8">
    <h2 class="mb-4 text-2xl font-bold">Nested Tabs</h2>
    <Tabs defaultValue="parent-1" class="max-w-[500px]">
      <TabsList>
        <TabsTrigger value="parent-1">Parent Tab 1</TabsTrigger>
        <TabsTrigger value="parent-2">Parent Tab 2</TabsTrigger>
        <TabsTrigger value="parent-3">Parent Tab 3</TabsTrigger>
      </TabsList>
      <TabsContent value="parent-1"> Content of Parent Tab 1 </TabsContent>
      <TabsContent value="parent-2">
        <div>
          <p class="mb-2">Parent Tab 2 contains its own tabs:</p>
          <Tabs defaultValue="child-a" class="max-w-[350px]">
            <TabsList>
              <TabsTrigger value="child-a">Child A</TabsTrigger>
              <TabsTrigger value="child-b">Child B</TabsTrigger>
            </TabsList>
            <TabsContent value="child-a">Content of Child Tab A</TabsContent>
            <TabsContent value="child-b">Content of Child Tab B</TabsContent>
          </Tabs>
        </div>
      </TabsContent>
      <TabsContent value="parent-3"> Content of Parent Tab 3 </TabsContent>
    </Tabs>
  </section>
</section>
