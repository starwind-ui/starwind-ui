---
import { AspectRatio } from "@/components/starwind/aspect-ratio";
---

<section class="mx-auto mt-10 max-w-lg">
  <h2 class="mb-4 text-2xl font-bold">Aspect Ratio Demo</h2>
  <div class="w-[450px]">
    <AspectRatio ratio={16 / 9} class="bg-muted overflow-hidden rounded-lg">
      <img
        src="https://images.unsplash.com/photo-1588345921523-c2dcdb7f1dcd?w=800&dpr=2&q=80"
        alt="Gray concrete building with windows"
        class="h-full w-full rounded-lg object-cover"
      />
    </AspectRatio>
  </div>
</section>
