---
import ArrowLeft from "@tabler/icons/outline/arrow-left.svg";
import ArrowRight from "@tabler/icons/outline/arrow-right.svg";
import Bold from "@tabler/icons/outline/bold.svg";
import ChevronDown from "@tabler/icons/outline/chevron-down.svg";
import ChevronRight from "@tabler/icons/outline/chevron-right.svg";
import CircleCheck from "@tabler/icons/outline/circle-check.svg";
import Copy from "@tabler/icons/outline/copy.svg";
import Edit from "@tabler/icons/outline/edit.svg";
import Flame from "@tabler/icons/outline/flame.svg";
import Heart from "@tabler/icons/outline/heart.svg";
import InfoCircle from "@tabler/icons/outline/info-circle.svg";
import Italic from "@tabler/icons/outline/italic.svg";
import Mail from "@tabler/icons/outline/mail.svg";
import Moon from "@tabler/icons/outline/moon.svg";
import Search from "@tabler/icons/outline/search.svg";
import Star from "@tabler/icons/outline/star.svg";
import Sun from "@tabler/icons/outline/sun.svg";
import Underline from "@tabler/icons/outline/underline.svg";
import IconX from "@tabler/icons/outline/x.svg";

import CarouselDemos from "@/components/carousel-demos/CarouselDemos.astro";
import CarouselPluginDemo from "@/components/carousel-demos/CarouselPluginDemo.astro";
import ContactForm from "@/components/forms/ContactForm.astro";
import CreateProjectForm from "@/components/forms/CreateProjectForm.astro";
import EditProfileForm from "@/components/forms/EditProfileForm.astro";
import ProgressExample from "@/components/forms/ProgressExample.astro";
import SwitchListenerTest from "@/components/forms/SwitchListenerTest.astro";
import TabsForm from "@/components/forms/TabsForm.astro";
import {
  Accordion,
  AccordionContent,
  AccordionItem,
  AccordionTrigger,
} from "@/components/starwind/accordion";
import { Alert, AlertDescription, AlertTitle } from "@/components/starwind/alert";
import {
  AlertDialog,
  AlertDialogAction,
  AlertDialogCancel,
  AlertDialogContent,
  AlertDialogDescription,
  AlertDialogFooter,
  AlertDialogHeader,
  AlertDialogTitle,
  AlertDialogTrigger,
} from "@/components/starwind/alert-dialog";
import { AspectRatio } from "@/components/starwind/aspect-ratio";
import { Avatar, AvatarFallback, AvatarImage } from "@/components/starwind/avatar";
import { Badge } from "@/components/starwind/badge";
import {
  Breadcrumb,
  BreadcrumbEllipsis,
  BreadcrumbItem,
  BreadcrumbLink,
  BreadcrumbList,
  BreadcrumbPage,
  BreadcrumbSeparator,
} from "@/components/starwind/breadcrumb";
import { Button, ButtonVariants } from "@/components/starwind/button";
import {
  ButtonGroup,
  ButtonGroupSeparator,
  ButtonGroupText,
} from "@/components/starwind/button-group";
import {
  Card,
  CardContent,
  CardDescription,
  CardFooter,
  CardHeader,
  CardTitle,
} from "@/components/starwind/card";
import {
  Carousel,
  CarouselContent,
  CarouselItem,
  CarouselNext,
  CarouselPrevious,
} from "@/components/starwind/carousel";
import { Checkbox } from "@/components/starwind/checkbox";
import {
  Dialog,
  DialogClose,
  DialogContent,
  DialogDescription,
  DialogFooter,
  DialogHeader,
  DialogTitle,
  DialogTrigger,
} from "@/components/starwind/dialog";
import {
  Dropdown,
  DropdownContent,
  DropdownItem,
  DropdownLabel,
  DropdownSeparator,
  DropdownTrigger,
} from "@/components/starwind/dropdown";
import {
  Dropzone,
  DropzoneFilesList,
  DropzoneLoadingIndicator,
  DropzoneUploadIndicator,
} from "@/components/starwind/dropzone";
import { Input } from "@/components/starwind/input";
import {
  Item,
  ItemActions,
  ItemContent,
  ItemDescription,
  ItemFooter,
  ItemGroup,
  ItemHeader,
  ItemMedia,
  ItemSeparator,
  ItemTitle,
} from "@/components/starwind/item";
import { Kbd, KbdGroup } from "@/components/starwind/kbd";
import { Label } from "@/components/starwind/label";
import {
  Pagination,
  PaginationContent,
  PaginationEllipsis,
  PaginationItem,
  PaginationLink,
  PaginationNext,
  PaginationPrevious,
} from "@/components/starwind/pagination";
import { Progress } from "@/components/starwind/progress";
import { RadioGroup, RadioGroupItem } from "@/components/starwind/radio-group";
import {
  Select,
  SelectContent,
  SelectGroup,
  SelectItem,
  SelectLabel,
  SelectSearch,
  SelectSeparator,
  SelectTrigger,
  SelectValue,
} from "@/components/starwind/select";
import { Separator } from "@/components/starwind/separator";
import {
  Sheet,
  SheetClose,
  SheetContent,
  SheetDescription,
  SheetFooter,
  SheetHeader,
  SheetTitle,
  SheetTrigger,
} from "@/components/starwind/sheet";
import { Skeleton } from "@/components/starwind/skeleton";
import { Spinner } from "@/components/starwind/spinner";
import { Switch } from "@/components/starwind/switch";
import {
  Table,
  TableBody,
  TableCaption,
  TableCell,
  TableFoot,
  TableHead,
  TableHeader,
  TableRow,
} from "@/components/starwind/table";
import { Tabs, TabsContent, TabsList, TabsTrigger } from "@/components/starwind/tabs";
import { Toggle } from "@/components/starwind/toggle";
import { Tooltip, TooltipContent, TooltipTrigger } from "@/components/starwind/tooltip";
import Layout from "@/layouts/Layout.astro";
---

<Layout
  title="Starwind UI components demo"
  description="A collection of accessible UI components built with Astro"
>
  <div class="container mx-auto px-4 pb-20">
    <!-- Aspect Ratio Demo -->
    <section class="mx-auto mt-10 max-w-lg">
      <h2 class="mb-4 text-2xl font-bold">Aspect Ratio Demo</h2>
      <div class="w-[450px]">
        <AspectRatio ratio={16 / 9} class="bg-muted overflow-hidden rounded-lg">
          <img
            src="https://images.unsplash.com/photo-1588345921523-c2dcdb7f1dcd?w=800&dpr=2&q=80"
            alt="Gray concrete building with windows"
            class="h-full w-full rounded-lg object-cover"
          />
        </AspectRatio>
      </div>
    </section>

    <!-- Spinner Demo -->
    <section class="mx-auto mt-10 max-w-lg">
      <h2 class="mb-4 text-2xl font-bold">Spinner Demo</h2>
      <div class="flex items-start gap-4">
        <div>
          <p class="text-muted-foreground mb-2 text-sm">Default</p>
          <Spinner />
        </div>
        <div>
          <p class="text-muted-foreground mb-2 text-sm">Large</p>
          <Spinner class="size-8" />
        </div>
        <div>
          <p class="text-muted-foreground mb-2 text-sm">Custom Color</p>
          <Spinner class="text-primary size-6" />
        </div>
      </div>
    </section>

    <!-- Separator Demo -->
    <section class="mx-auto mt-10 max-w-lg">
      <h2 class="mb-4 text-2xl font-bold">Separator Demo</h2>
      <div>
        <div class="space-y-1">
          <h4 class="text-sm leading-none font-medium">Radix Primitives</h4>
          <p class="text-muted-foreground text-sm">An open-source UI component library.</p>
        </div>
        <Separator class="my-4" />
        <div class="flex h-5 items-center space-x-4 text-sm">
          <div>Blog</div>
          <Separator orientation="vertical" />
          <div>Docs</div>
          <Separator orientation="vertical" />
          <div>Source</div>
        </div>
      </div>
    </section>

    <!-- Item Demo -->
    <section class="mx-auto mt-10 max-w-lg">
      <h2 class="mb-4 text-2xl font-bold">Item Demo</h2>
      <div class="flex w-full max-w-md flex-col gap-6">
        <Item variant="outline">
          <ItemContent>
            <ItemTitle>Basic Item</ItemTitle>
            <ItemDescription>A simple item with title and description.</ItemDescription>
          </ItemContent>
          <ItemActions>
            <Button variant="outline" size="sm">Action</Button>
          </ItemActions>
        </Item>
        <Item variant="outline" size="sm" as="a" href="#">
          <ItemMedia>
            <CircleCheck class="size-5" />
          </ItemMedia>
          <ItemContent>
            <ItemTitle>Your profile has been verified.</ItemTitle>
          </ItemContent>
          <ItemActions>
            <ChevronRight class="size-4" />
          </ItemActions>
        </Item>
      </div>
    </section>

    <!-- Item with Icon Demo -->
    <section class="mx-auto mt-10 max-w-lg">
      <h2 class="mb-4 text-2xl font-bold">Item with Icon</h2>
      <div class="flex w-full max-w-lg flex-col gap-6">
        <Item variant="outline">
          <ItemMedia variant="icon">
            <InfoCircle />
          </ItemMedia>
          <ItemContent>
            <ItemTitle>Security Alert</ItemTitle>
            <ItemDescription>New login detected from unknown device.</ItemDescription>
          </ItemContent>
          <ItemActions>
            <Button size="sm" variant="outline">Review</Button>
          </ItemActions>
        </Item>
      </div>
    </section>

    <!-- Item Variants Demo -->
    <section class="mx-auto mt-10 max-w-lg">
      <h2 class="mb-4 text-2xl font-bold">Item Variants</h2>
      <div class="flex flex-col gap-6">
        <Item>
          <ItemContent>
            <ItemTitle>Default Variant</ItemTitle>
            <ItemDescription>
              Standard styling with subtle background and borders.
            </ItemDescription>
          </ItemContent>
          <ItemActions>
            <Button variant="outline" size="sm">Open</Button>
          </ItemActions>
        </Item>
        <Item variant="outline">
          <ItemContent>
            <ItemTitle>Outline Variant</ItemTitle>
            <ItemDescription>
              Outlined style with clear borders and transparent background.
            </ItemDescription>
          </ItemContent>
          <ItemActions>
            <Button variant="outline" size="sm">Open</Button>
          </ItemActions>
        </Item>
        <Item variant="muted">
          <ItemContent>
            <ItemTitle>Muted Variant</ItemTitle>
            <ItemDescription>
              Subdued appearance with muted colors for secondary content.
            </ItemDescription>
          </ItemContent>
          <ItemActions>
            <Button variant="outline" size="sm">Open</Button>
          </ItemActions>
        </Item>
      </div>
    </section>

    <!-- Sheet Demo -->
    <section class="mx-auto mt-10 max-w-lg">
      <h2 class="mb-4 text-2xl font-bold">Sheet Demo</h2>
      <div class="grid grid-cols-2 gap-4">
        <!-- Top Sheet -->
        <Sheet>
          <SheetTrigger asChild>
            <Button variant="outline">Open Top Sheet</Button>
          </SheetTrigger>
          <SheetContent side="top">
            <SheetHeader>
              <SheetTitle>Top Sheet</SheetTitle>
              <SheetDescription> This sheet opens from the top of the screen. </SheetDescription>
            </SheetHeader>
            <div class="grid flex-1 auto-rows-min gap-6 px-4">
              <div class="grid gap-3">
                <Label for="top-sheet-name">Name</Label>
                <Input id="top-sheet-name" value="Pedro Duarte" />
              </div>
              <div class="grid gap-3">
                <Label for="top-sheet-username">Username</Label>
                <Input id="top-sheet-username" value="@peduarte" />
              </div>
            </div>
            <SheetFooter>
              <Button variant="default">Save changes</Button>
              <SheetClose asChild>
                <Button variant="outline">Close</Button>
              </SheetClose>
            </SheetFooter>
          </SheetContent>
        </Sheet>

        <!-- Right Sheet -->
        <Sheet>
          <SheetTrigger asChild>
            <Button variant="outline">Open Right Sheet</Button>
          </SheetTrigger>
          <SheetContent side="right">
            <SheetHeader>
              <SheetTitle>Right Sheet</SheetTitle>
              <SheetDescription>
                This sheet opens from the right side of the screen.
              </SheetDescription>
            </SheetHeader>
            <div class="grid flex-1 auto-rows-min gap-6 px-4">
              <div class="grid gap-3">
                <Label for="right-sheet-name">Name</Label>
                <Input id="right-sheet-name" value="Pedro Duarte" />
              </div>
              <div class="grid gap-3">
                <Label for="right-sheet-username">Username</Label>
                <Input id="right-sheet-username" value="@peduarte" />
              </div>
            </div>
            <SheetFooter>
              <Button variant="default">Save changes</Button>
              <SheetClose asChild>
                <Button variant="outline">Close</Button>
              </SheetClose>
            </SheetFooter>
          </SheetContent>
        </Sheet>

        <!-- Bottom Sheet -->
        <Sheet>
          <SheetTrigger asChild>
            <Button variant="outline">Open Bottom Sheet</Button>
          </SheetTrigger>
          <SheetContent side="bottom">
            <SheetHeader>
              <SheetTitle>Bottom Sheet</SheetTitle>
              <SheetDescription> This sheet opens from the bottom of the screen. </SheetDescription>
            </SheetHeader>
            <div class="grid flex-1 auto-rows-min gap-6 px-4">
              <div class="grid gap-3">
                <Label for="bottom-sheet-name">Name</Label>
                <Input id="bottom-sheet-name" value="Pedro Duarte" />
              </div>
              <div class="grid gap-3">
                <Label for="bottom-sheet-username">Username</Label>
                <Input id="bottom-sheet-username" value="@peduarte" />
              </div>
            </div>
            <SheetFooter>
              <Button variant="default">Save changes</Button>
              <SheetClose asChild>
                <Button variant="outline">Close</Button>
              </SheetClose>
            </SheetFooter>
          </SheetContent>
        </Sheet>

        <!-- Left Sheet -->
        <Sheet>
          <SheetTrigger asChild>
            <Button variant="outline">Open Left Sheet</Button>
          </SheetTrigger>
          <SheetContent side="left">
            <SheetHeader>
              <SheetTitle>Left Sheet</SheetTitle>
              <SheetDescription>
                This sheet opens from the left side of the screen.
              </SheetDescription>
            </SheetHeader>
            <div class="grid flex-1 auto-rows-min gap-6 px-4">
              <div class="grid gap-3">
                <Label for="left-sheet-name">Name</Label>
                <Input id="left-sheet-name" value="Pedro Duarte" />
              </div>
              <div class="grid gap-3">
                <Label for="left-sheet-username">Username</Label>
                <Input id="left-sheet-username" value="@peduarte" />
              </div>
            </div>
            <SheetFooter>
              <Button variant="default">Save changes</Button>
              <SheetClose asChild>
                <Button variant="outline">Close</Button>
              </SheetClose>
            </SheetFooter>
          </SheetContent>
        </Sheet>
      </div>
    </section>

    <CarouselDemos />
    <CarouselPluginDemo />

    <!-- file input -->
    <section class="mx-auto mt-6 max-w-lg">
      <div class={ButtonVariants.button({ variant: "primary", size: "lg" })}>
        Variant Usage Example
      </div>
      <h2 class="mb-4 text-2xl font-bold">File Input</h2>
      <div class="flex flex-col gap-6">
        <Dropzone />
        <Dropzone multiple>
          <DropzoneUploadIndicator
            ><span class="my-6 text-lg"> Your specific message </span></DropzoneUploadIndicator
          >
          <DropzoneLoadingIndicator />
          <DropzoneFilesList />
        </Dropzone>
      </div>
    </section>
    <!-- progress -->
    <section class="mx-auto mt-6 max-w-lg">
      <h2 class="mb-4 text-2xl font-bold">Progress</h2>
      <div class="flex flex-col gap-6">
        <div class="space-y-4">
          <div class="flex items-center space-x-3">
            <span class="w-20 text-sm">Primary:</span>
            <Progress value={50} variant="primary" />
          </div>
          <div class="flex items-center space-x-3">
            <span class="w-20 text-sm">Secondary:</span>
            <Progress value={60} variant="secondary" />
          </div>
          <div class="flex items-center space-x-3">
            <span class="w-20 text-sm">Default:</span>
            <Progress value={70} variant="default" />
          </div>
          <div class="flex items-center space-x-3">
            <span class="w-20 text-sm">Info:</span>
            <Progress value={80} variant="info" />
          </div>
          <div class="flex items-center space-x-3">
            <span class="w-20 text-sm">Success:</span>
            <Progress value={90} variant="success" />
          </div>
          <div class="flex items-center space-x-3">
            <span class="w-20 text-sm">Warning:</span>
            <Progress value={40} variant="warning" />
          </div>
          <div class="flex items-center space-x-3">
            <span class="w-20 text-sm">Error:</span>
            <Progress value={30} variant="error" />
          </div>
        </div>

        <div class="bg-card mt-4 rounded-lg border p-4">
          <ProgressExample />
        </div>
      </div>
    </section>

    <!-- skeleton -->
    <section class="mx-auto mt-6 max-w-lg">
      <h2 class="mb-4 text-2xl font-bold">Skeleton</h2>
      <div class="flex items-center space-x-4">
        <Skeleton class="h-12 w-12 rounded-full" />
        <div class="space-y-2">
          <Skeleton class="h-4 w-[250px]" />
          <Skeleton class="h-4 w-[200px]" />
        </div>
      </div>

      <div class="mt-6 flex flex-col space-y-3">
        <Skeleton class="h-[125px] w-[250px] rounded-xl" />
        <div class="space-y-2">
          <Skeleton class="h-4 w-[250px]" />
          <Skeleton class="h-4 w-[200px]" />
        </div>
      </div>
    </section>

    <!-- radio group -->
    <section class="mx-auto mt-6 max-w-lg">
      <h2 class="mb-4 text-2xl font-bold">Radio Group</h2>
      <div class="space-y-6">
        <div>
          <h3 class="mb-2 text-lg font-medium">Favorite Fruit</h3>
          <RadioGroup name="fruit" defaultValue="apple" legend="Favorite Fruit">
            <div class="space-y-2">
              <div class="flex items-center gap-3">
                <RadioGroupItem value="apple" id="apple" name="fruit" />
                <Label for="apple">Apple</Label>
              </div>
              <div class="flex items-center gap-3">
                <RadioGroupItem value="banana" id="banana" name="fruit" />
                <Label for="banana">Banana</Label>
              </div>
              <div class="flex items-center gap-3">
                <RadioGroupItem value="orange" id="orange" name="fruit" />
                <Label for="orange">Orange</Label>
              </div>
              <div class="flex items-center gap-3">
                <RadioGroupItem value="strawberry" id="strawberry" name="fruit" disabled />
                <Label for="strawberry">Strawberry</Label>
              </div>
            </div>
          </RadioGroup>
        </div>

        <div>
          <h3 class="mb-2 text-lg font-medium">Subscription Plan</h3>
          <RadioGroup name="plan" legend="Select your subscription plan">
            <div class="flex items-center space-x-6">
              <div class="flex items-center gap-3">
                <RadioGroupItem value="free" id="free" size="sm" variant="secondary" name="plan" />
                <Label for="free" size="sm">Small</Label>
              </div>
              <div class="flex items-center gap-3">
                <RadioGroupItem value="pro" id="pro" size="md" variant="info" name="plan" />
                <Label for="pro" size="md">Medium</Label>
              </div>
              <div class="flex items-center gap-3">
                <RadioGroupItem value="team" id="team" size="lg" variant="success" name="plan" />
                <Label for="team" size="lg">Large</Label>
              </div>
            </div>
          </RadioGroup>
        </div>
      </div>
    </section>

    <!-- breadcrumb -->
    <section class="mx-auto mt-6 max-w-lg">
      <Breadcrumb>
        <BreadcrumbList>
          <BreadcrumbItem>
            <BreadcrumbLink href="/">Home</BreadcrumbLink>
          </BreadcrumbItem>
          <BreadcrumbSeparator />
          <BreadcrumbItem>
            <BreadcrumbEllipsis />
          </BreadcrumbItem>
          <BreadcrumbSeparator />
          <BreadcrumbItem>
            <BreadcrumbLink href="/components">Components</BreadcrumbLink>
          </BreadcrumbItem>
          <BreadcrumbSeparator />
          <BreadcrumbItem>
            <BreadcrumbPage>Breadcrumb</BreadcrumbPage>
          </BreadcrumbItem>
        </BreadcrumbList>
      </Breadcrumb>
    </section>

    <!-- dropdown -->
    <section class="mx-auto mt-6 max-w-lg">
      <h2 class="mb-4 text-2xl font-bold">Dropdown</h2>
      <div class="flex items-center gap-4">
        <!-- Basic Dropdown -->
        <Dropdown openOnHover>
          <DropdownTrigger asChild>
            <Button>Left</Button>
          </DropdownTrigger>
          <DropdownContent>
            <DropdownLabel>My Account</DropdownLabel>
            <DropdownSeparator />
            <DropdownItem as="a" href="/profile">Profile</DropdownItem>
            <DropdownItem>Settings</DropdownItem>
            <DropdownSeparator />
            <DropdownItem>Help</DropdownItem>
            <DropdownItem disabled>Sign out</DropdownItem>
          </DropdownContent>
        </Dropdown>

        <!-- Dropdown with Groups -->
        <Dropdown>
          <DropdownTrigger asChild>
            <Button>Right</Button>
          </DropdownTrigger>
          <DropdownContent align="end" side="bottom">
            <DropdownLabel>Actions</DropdownLabel>
            <DropdownSeparator />
            <DropdownItem>
              <Copy />
              Copy
            </DropdownItem>
            <DropdownItem>
              <Edit />
              Edit
            </DropdownItem>
            <DropdownSeparator />
            <DropdownLabel>Danger Zone</DropdownLabel>
            <DropdownItem inset>Archive</DropdownItem>
            <DropdownItem inset disabled>Delete</DropdownItem>
          </DropdownContent>
        </Dropdown>
      </div>
    </section>

    <!-- Alert Dialog -->
    <section class="mx-auto mt-6 max-w-lg">
      <AlertDialog>
        <AlertDialogTrigger asChild>
          <Button variant="outline">Show Alert Dialog</Button>
        </AlertDialogTrigger>
        <AlertDialogContent>
          <AlertDialogHeader>
            <AlertDialogTitle>Are you absolutely sure?</AlertDialogTitle>
            <AlertDialogDescription>
              This action cannot be undone. This will permanently delete your account and remove
              your data from our servers.
            </AlertDialogDescription>
          </AlertDialogHeader>
          <AlertDialogFooter>
            <AlertDialogCancel>Cancel</AlertDialogCancel>
            <AlertDialogAction>Continue</AlertDialogAction>
          </AlertDialogFooter>
        </AlertDialogContent>
      </AlertDialog>
    </section>

    <!-- dialog -->
    <section class="mx-auto mt-6 max-w-lg">
      <EditProfileForm />
    </section>

    <!-- tabs -->
    <section class="mx-auto mt-6 flex w-full max-w-lg flex-col gap-6">
      <TabsForm />

      <Tabs defaultValue="npm" syncKey="package-manager" class="max-w-[400px]">
        <TabsList>
          <TabsTrigger value="npm">npm</TabsTrigger>
          <TabsTrigger value="pnpm">pnpm</TabsTrigger>
          <TabsTrigger value="bun">bun</TabsTrigger>
          <TabsTrigger value="yarn">yarn</TabsTrigger>
        </TabsList>
        <TabsContent value="npm">$ npx starwind@latest init</TabsContent>
        <TabsContent value="pnpm">$ pnpm dlx starwind@latest init</TabsContent>
        <TabsContent value="bun">$ bunx starwind@latest init</TabsContent>
        <TabsContent value="yarn">$ yarn dlx starwind@latest init</TabsContent>
      </Tabs>

      <Tabs defaultValue="npm" syncKey="package-manager" class="max-w-[400px]">
        <TabsList>
          <TabsTrigger value="npm">npm</TabsTrigger>
          <TabsTrigger value="pnpm">pnpm</TabsTrigger>
          <TabsTrigger value="bun">bun</TabsTrigger>
          <TabsTrigger value="yarn">yarn</TabsTrigger>
        </TabsList>
        <TabsContent value="npm">$ npm run dev</TabsContent>
        <TabsContent value="pnpm">$ pnpm dev</TabsContent>
        <TabsContent value="bun">$ bun dev</TabsContent>
        <TabsContent value="yarn">$ yarn dev</TabsContent>
      </Tabs>

      <!-- Nested Tabs Demo -->
      <section class="mt-8">
        <h2 class="mb-4 text-2xl font-bold">Nested Tabs</h2>
        <Tabs defaultValue="parent-1" class="max-w-[500px]">
          <TabsList>
            <TabsTrigger value="parent-1">Parent Tab 1</TabsTrigger>
            <TabsTrigger value="parent-2">Parent Tab 2</TabsTrigger>
            <TabsTrigger value="parent-3">Parent Tab 3</TabsTrigger>
          </TabsList>
          <TabsContent value="parent-1"> Content of Parent Tab 1 </TabsContent>
          <TabsContent value="parent-2">
            <div>
              <p class="mb-2">Parent Tab 2 contains its own tabs:</p>
              <Tabs defaultValue="child-a" class="max-w-[350px]">
                <TabsList>
                  <TabsTrigger value="child-a">Child A</TabsTrigger>
